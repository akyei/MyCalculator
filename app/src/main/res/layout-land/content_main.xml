<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simplecalculator.MainActivity" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="onClick"
        android:text="Clear" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/editText1"
        android:layout_marginRight="25dp"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Button01"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/operand_border"
                android:onClick="onClick"
                android:text="1" />

            <Button
                android:id="@+id/Button02"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="2" />

            <Button
                android:id="@+id/Button03"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="3" />

            <Button
                android:id="@+id/Button11"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/simple_operator_border"
                android:text="+"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Button04"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="4" />

            <Button
                android:id="@+id/Button05"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="5" />

            <Button
                android:id="@+id/Button06"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/operand_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="6" />

            <Button
                android:id="@+id/Button12"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/simple_operator_border"
                android:onClick="onClick"
                android:text="-"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Button07"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/operand_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="7" />

            <Button
                android:id="@+id/Button08"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/operand_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="8" />

            <Button
                android:id="@+id/Button09"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/operand_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="9" />

            <Button
                android:id="@+id/Button13"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/simple_operator_border"
                android:text="x"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Button16"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/operand_border"
                android:onClick="onClick"
                android:text="." />

            <Button
                android:id="@+id/Button00"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="0" />

            <Button
                android:id="@+id/Button15"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/operand_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="=" />

            <Button
                android:id="@+id/Button14"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/simple_operator_border"
                android:onClick="onClick"
                android:text="÷"
                />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_marginLeft="32dp"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonSquare"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/complex_operator_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="x²" />

            <Button
                android:id="@+id/buttonSine"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/complex_operator_border"
                android:text="sin(x)" />

            <Button
                android:id="@+id/buttonPercent"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/complex_operator_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="%" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonCube"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/complex_operator_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="x³" />

            <Button
                android:id="@+id/buttonCosine"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/complex_operator_border"
                android:onClick="onClick"
                android:text="cos(x)" />

            <Button
                android:id="@+id/buttonLn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:background="@drawable/complex_operator_border"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ln" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonSqRt"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/complex_operator_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="√" />

            <Button
                android:id="@+id/buttonTangent"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/complex_operator_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="tan(x)" />

            <Button
                android:id="@+id/buttonLog"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/complex_operator_border"
                android:onClick="onClick"
                android:text="log10" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonPi"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/constant_border"
                android:text="π" />

            <Button
                android:id="@+id/buttonE"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/constant_border"
                android:text="e" />

            <Button
                android:id="@+id/buttonRtTwo"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/constant_border"
                android:text="√2" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:background="@color/background"
        android:gravity="right"


        android:layout_centerHorizontal="true"
        android:ems="10"
        />

</RelativeLayout>